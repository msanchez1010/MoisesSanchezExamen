<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoisesSanchezExamen.Vistas.Resumen"
             Title="Resumen">
    <VerticalStackLayout>
        <Label 
            x:Name="lblUsuario"
            FontSize="14"
            HorizontalTextAlignment="End"
            TextColor="red"/>
        
        <Label 
            Text="RESUMEN"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="22"
            TextColor="blue"/>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label
                x:Name="lblNombre"
                Text="Nombre:"
                FontSize="20"
                Grid.Row="0"
                Grid.Column="0"/>

            <Label 
                x:Name="lblApellido"
                Text="Apellido:"
                FontSize="20"
                Grid.Row="1"
                Grid.Column="0"/>

            <Label 
                x:Name="lblEdad"
                Text="Edad:"
                FontSize="20"
                Grid.Row="2"
                Grid.Column="0"/>

            <Label 
                Text="Pago Mensual:"
                FontSize="20"
                Grid.Row="3"
                Grid.Column="0"/>

            <Label 
                x:Name="lblPagoMensual"
                FontSize="20"
                Grid.Row="3"
                Grid.Column="1"/>

        </Grid>

    </VerticalStackLayout>
</ContentPage>